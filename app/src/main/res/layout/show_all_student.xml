<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/tb_student"
        android:weightSum="12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="@string/show_list_student_id"
            android:id="@+id/tv_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:layout_weight="1"
            tools:ignore="RtlHardcoded,RtlSymmetry" />
        <TextView
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="@string/show_list_student_name"
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:layout_weight="5"
            tools:ignore="RtlHardcoded,RtlSymmetry" />
        <TextView
            android:text="@string/show_list_student_age"
            android:id="@+id/tv_age"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="5dp"
            android:paddingLeft="5dp"
            android:layout_weight="1"
            tools:ignore="RtlHardcoded,RtlSymmetry" />
        <TextView
            android:text="@string/add_student_male"
            android:id="@+id/tv_sex"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:layout_weight="2"
            tools:ignore="RtlHardcoded,RtlSymmetry" />
        <TextView
            android:text="@string/show_list_student_phone"
            android:id="@+id/tv_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:layout_weight="3"
            tools:ignore="RtlHardcoded,RtlSymmetry" />
    </LinearLayout>
</RelativeLayout>