<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".School_Schedule">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#fff"
        android:id="@+id/txtLinerLayout"
        tools:ignore="MissingConstraints">


        <TextView
            android:id="@+id/textView2"
            android:gravity="center"
            android:textColor="#921B1B"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1週間のスケジュール" />

        <TextView
            android:id="@+id/textView3"
            android:gravity="center"
            android:textColor="#2196F3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="担当者：　レスアン　ドゥク" />
        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txtEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp"
                android:text="Set Text: " />
            <EditText
                android:id="@+id/edtText"
                android:layout_marginRight="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-15dp"
                android:ems="5"
                />
            <Button
                android:id="@+id/btnModify"
                android:textSize="10sp"
                android:background="#8BC34A"
                android:textAllCaps="false"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Edit Time" />
        </LinearLayout>


        <TableLayout
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tbLayoutStudent"
            android:layout_marginTop="10dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:orientation="horizontal"
            android:stretchColumns="*"
            android:shrinkColumns="*">
            <TableRow
                android:clickable="true"
                android:id="@+id/aaaaa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">
                <Button
                    android:textSize="10sp"
                    android:clickable="true"
                    android:id="@+id/aaaaaaa"
                    android:layout_marginTop="-7dp"
                    android:layout_width="match_parent"
                    android:background="@drawable/custom_button"
                    android:layout_height="wrap_content"
                    android:text="AM\nPM" />

                <Button
                    android:textSize="10sp"
                    android:layout_width="match_parent"
                    android:background="@drawable/custom_button"
                    android:layout_height="wrap_content"
                    android:text="時間" />

                <Button
                    android:textSize="10sp"
                    android:layout_width="match_parent"
                    android:background="@drawable/custom_button"
                    android:layout_height="wrap_content"
                    android:text="月曜日" />

                <Button
                    android:textSize="10sp"
                    android:layout_width="match_parent"
                    android:background="@drawable/custom_button"
                    android:layout_height="wrap_content"
                    android:text="火曜日" />
                <Button
                    android:textSize="10sp"
                    android:layout_width="match_parent"
                    android:background="@drawable/custom_button"
                    android:layout_height="wrap_content"
                    android:text="水曜日" />
                <Button
                    android:textSize="10sp"
                    android:layout_width="match_parent"
                    android:background="@drawable/custom_button"
                    android:layout_height="wrap_content"
                    android:text="木曜日" />
                <Button
                    android:textSize="10sp"
                    android:layout_width="match_parent"
                    android:background="@drawable/custom_button"
                    android:layout_height="wrap_content"
                    android:text="金曜日" />

            </TableRow>
        </TableLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>