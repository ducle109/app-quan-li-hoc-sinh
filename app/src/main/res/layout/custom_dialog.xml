<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imgAvatar"
            android:layout_marginTop="10dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/boy"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="16dp"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="Name : "
                    />
                <TextView
                    android:textSize="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Le Xuan Duc "
                    />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="16dp"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="Sex: "
                    />
                <TextView
                    android:textSize="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male "
                    />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="16dp"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="Age: "
                />
                <TextView
                    android:textSize="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22 "
                    />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:paddingLeft="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Entrance date  "
                android:padding="5dp"
                />
            <EditText
                android:id="@+id/edt_year"
                android:ems="6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- 2015/10/1 "
                />
            <ImageView
                android:id="@+id/img_edt_year"
                android:src="@drawable/edit"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_width="20dp"
                android:layout_height="20dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="110dp"
                android:padding="5dp"
                android:layout_height="wrap_content"
                android:text="Telephone  "
                />
            <EditText
                android:id="@+id/edt_phone"
                android:ems="6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- 0123456789 "
                />
            <ImageView
                android:id="@+id/img_edt_phone"
                android:src="@drawable/edit"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_width="20dp"
                android:layout_height="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="110dp"
                android:padding="5dp"
                android:layout_height="wrap_content"
                android:text="Class "
                />
            <EditText
                android:id="@+id/edt_class"
                android:ems="6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- 12A1 "
                />
            <ImageView
                android:id="@+id/img_edt_class"
                android:src="@drawable/edit"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_width="20dp"
                android:layout_height="20dp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="110dp"
                android:padding="5dp"
                android:layout_height="wrap_content"
                android:text="Chairman " />
            <EditText
                android:id="@+id/edt_chairman"
                android:ems="6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- leduc "
                />
            <ImageView
                android:id="@+id/img_edt_chairman"
                android:src="@drawable/edit"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_width="20dp"
                android:layout_height="20dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="110dp"
                android:padding="5dp"
                android:layout_height="wrap_content"
                android:text="Hobby "
                />
            <EditText
                android:id="@+id/edt_hobby"
                android:ems="6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- game "
                />
            <ImageView
                android:id="@+id/img_edt_hobby"
                android:src="@drawable/edit"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_width="20dp"
                android:layout_height="20dp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="110dp"
                android:padding="5dp"
                android:layout_height="wrap_content"
                android:text="Grade : "
                />
            <EditText
                android:id="@+id/edt_grade"
                android:ems="6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- Good "
                tools:ignore="InvalidId" />
            <ImageView
                android:id="@+id/img_edt_grade"
                android:src="@drawable/edit"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_width="20dp"
                android:layout_height="20dp" />
        </LinearLayout>
    </LinearLayout>



</LinearLayout>